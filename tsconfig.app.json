{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": false, // Desactiva todas las reglas estrictas
    "noUnusedLocals": false, // Permite variables locales sin usar
    "noUnusedParameters": false, // Permite parámetros sin usar
    "noFallthroughCasesInSwitch": false, // Permite fallos en switch sin advertencias
    "forceConsistentCasingInFileNames": false // No fuerza el uso consistente de mayúsculas/minúsculas en nombres de archivo
  },
  "include": ["src"]
}
